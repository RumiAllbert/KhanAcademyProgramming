mouseMoved = function() {
    var mouse = new PVector(mouseX, mouseY);
    background(255, 255, 255);
    var m = mouse.mag();
    fill(70, 22, 227);
    text(m, mouse.x,mouse.y);
    stroke(255, 0, 0);
    strokeWeight(3);
    line(0, 0, mouse.x, mouse.y);
    var mouse = new PVector(mouseX, mouseY);
    var back = dist(0,0,width,height);
    var back2 = map(m,0,back,0,255);
    background(back2, back2, back2);
    
};
